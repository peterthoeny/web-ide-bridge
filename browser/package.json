{
  "name": "web-ide-bridge-browser",
  "version": "1.0.0",
  "description": "Web-IDE-Bridge browser library for seamless IDE integration",
  "main": "web-ide-bridge.js",
  "module": "src/client.js",
  "files": [
    "web-ide-bridge.js",
    "web-ide-bridge.min.js",
    "src/",
    "demo.html"
  ],
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "dev": "webpack --mode=development --watch",
    "serve": "webpack serve --mode=development --open",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist/ web-ide-bridge.js web-ide-bridge.min.js"
  },
  "keywords": [
    "ide",
    "bridge",
    "websocket",
    "code-editor",
    "browser",
    "web-development",
    "client-library"
  ],
  "author": "Web-IDE-Bridge Contributors",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterthoeny/web-ide-bridge.git",
    "directory": "browser"
  },
  "bugs": {
    "url": "https://github.com/peterthoeny/web-ide-bridge/issues"
  },
  "homepage": "https://github.com/peterthoeny/web-ide-bridge#readme",
  "peerDependencies": {},
  "devDependencies": {
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "terser-webpack-plugin": "^5.3.9",
    "eslint": "^8.51.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "babel-jest": "^29.7.0"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
